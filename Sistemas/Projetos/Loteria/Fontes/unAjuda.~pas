unit unAjuda;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, ExtCtrls;

type
  TfrmAjuda = class(TForm)
    lblTitulo: TLabel;
    lblInfExplicacao: TLabel;
    bvlDivisao: TBevel;
    lblExplicacao: TLabel;
  private
    { Private declarations }
  public
    constructor CriaObjeto(pnTipoAjuda: integer);
  end;

implementation

uses
  unConstantes;

{$R *.dfm}

{ TfrmAjuda }

constructor TfrmAjuda.CriaObjeto(pnTipoAjuda: integer);
begin
  inherited;

  lblTitulo.Caption := '';
  lblExplicacao.Caption := '';

  if (pnTipoAjuda = nAJUDA_NUMEROS_MAIS_SORTEADOS) then
  begin
    lblTitulo.Caption := 'NÚMEROS MAIS SORTEADOS';
    lblExplicacao.Caption := 'Números que mais foram sorteados na loto-fácil.';
  end;
end;

end.
